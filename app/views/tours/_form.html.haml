= simple_form_for @tour do |f|
  = f.input :cover
  = f.collection_select :category_id, Category.all, :id, :name, { promt: 'Chose a category'}, input_html: { class: 'dropdown-toggle' }
  = f.input :title
  = f.input :description
  = f.input :date
  = f.input :price
  = f.input :money, priority: ['€'], collection: ['$', '€', '₴']
  = f.input :place
  = f.button :submit
