.form-container
  .quick-authorization
    %p Швидка авторизація за допомогою
    %ul
      %li
        = link_to(user_omniauth_authorize_path(:facebook)) do
          = image_tag 'soc-auth-fb.png', class: 'soc-auth-image'
          Facebook
      %li
        |
      %li
        = link_to(user_omniauth_authorize_path(:vkontakte)) do
          = image_tag 'soc-auth-vk.png', class: 'soc-auth-image'
          Vkontakte
  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = f.error_notification

    .form-inputs
      = f.input :email, required: true,
       label: 'Email', label_html: { class: 'form-label'}, placeholder: 'Ваша поштова адреса '

      = f.input :password, required: true, hint: ("#{@minimum_password_length} символів мінімум" if @minimum_password_length),
        label: 'Пароль', label_html: { class: 'form-label'}, placeholder: 'Придумайте пароль'


      = f.input :password_confirmation, required: true,
        label: 'Підтвердження паролю',label_html: { class: 'form-label'}, placeholder: 'Введіть пароль повторно'

    .form-actions
      .row
        .col-md-6
          = f.button :submit, 'Зареєструватись', class: 'form-submit-button'
        .col-md-6
          .sign-up-proposition
            = link_to 'Увійти в існуючий акrаунт', new_user_session_path
