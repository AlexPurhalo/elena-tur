.form-container
  .quick-authorization
    %p Швидка авторизація за допомогою
    %ul
      %li
        = link_to(user_omniauth_authorize_path(:facebook)) do
          = image_tag 'soc-auth-fb.png', class: 'soc-auth-image'
          Facebook
      %li
        |
      %li
        = link_to(user_omniauth_authorize_path(:vkontakte)) do
          = image_tag 'soc-auth-vk.png', class: 'soc-auth-image'
          Vkontakte
  = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form-inputs
      = f.input :email, required: false, autofocus: true,
         label: 'Email', label_html: { class: 'form-label'}, placeholder: 'Ваша поштова адреса '

      = f.input :password, required: false,
         label: 'Пароль', label_html: { class: 'form-label'}, placeholder: 'Пароль від облікового запису'

      = f.input :remember_me, inline_label: "Запам'ятати мене", wrapper_html: { class: 'form-check-box' },
         as: :boolean if devise_mapping.rememberable?
    .form-actions
      .row
        .col-md-6
          = f.button :submit, 'Увійти', class: 'form-submit-button'
        .col-md-6
          .sign-up-proposition
            = link_to 'Зареєструватись', new_user_registration_path